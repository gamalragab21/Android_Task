<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_5sdp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/product_img"
                android:layout_width="@dimen/_135sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_margin="@dimen/_8sdp"
                android:padding="@dimen/_5sdp"
                android:background="@color/secondary2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="@string/app_name"
                app:layout_constraintTop_toTopOf="parent"
                />
            <View
                android:id="@+id/product_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/product_img"
                app:layout_constraintEnd_toEndOf="@+id/product_img"
                app:layout_constraintStart_toStartOf="@id/product_img"
                android:textSize="@dimen/_13ssp"
                android:textAlignment="center"
                android:background="@drawable/bg_view_small_simmer"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:textColor="@color/black"
                android:singleLine="true"
                android:maxLines="1"
                android:text="Product name"
                android:fontFamily="@font/prompt_regular"
                />
            <View
                android:id="@+id/product_price"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_name"
                android:background="@drawable/bg_view_small_simmer"

                android:textSize="@dimen/_12ssp"
                android:includeFontPadding="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/color_shape"
                android:fontFamily="@font/prompt_semibold"
                />
            <View
                android:id="@+id/product_old_price"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_10sdp"
                android:includeFontPadding="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_price"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/bg_view_small_simmer"
                android:layout_marginStart="@dimen/_5sdp"
                android:textColor="@color/color_shape"
                android:fontFamily="@font/prompt_semibold"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingBottom="@dimen/_3sdp"
                />

            <View
                android:layout_width="@dimen/_30sdp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="@id/product_old_price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/product_old_price"
                android:background="@drawable/bg_view_small_simmer"
                />




        </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/red_light"
    android:layout_height="match_parent">


        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:src="@drawable/letter_r"
            android:background="@drawable/border_circle"
            android:padding="@dimen/_15sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_splash_logo_name"
            />

    <TextView
        android:id="@+id/tv_splash_logo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Task"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/_25ssp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingHorizontal="@dimen/_20ssp"
        android:paddingVertical="@dimen/_20ssp"
        android:fontFamily="@font/ubuntu_medium"

/>
</androidx.constraintlayout.widget.ConstraintLayout>